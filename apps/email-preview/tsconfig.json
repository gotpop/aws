{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/shared/*": ["../../src/shared/*"]
    }
  },
  "include": ["src/**/*", "emails/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    ".react-email"
  ]
}